---
import { Header } from '../components/Header'
import { Footer } from '../components/Footer'
import '../app.css'

interface Props {
  title?: string
}

const { title = 'Cyprus Developer Community' } = Astro.props
---

<!doctype html>
<html lang="en" class="h-full antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Cyprus Developer Community" />
    <meta name="twitter:description" content="Join the Cyprus developer community for meetups, talks, and networking events." />

    <!-- Open Graph -->
    <meta property="og:title" content="Cyprus Developer Community" />
    <meta property="og:description" content="Join the Cyprus developer community for meetups, talks, and networking events." />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Cyprus Developer Community" />
  </head>
  <body class="flex min-h-full bg-white dark:bg-black">
    <div class="flex w-full flex-col">
      <Header client:load />
      <slot />
      <Footer client:load />
    </div>
  </body>
</html>
