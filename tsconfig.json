{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@types": ["./app/types/index.ts"]
    },
    "types": ["node", "vitest/globals"],
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
