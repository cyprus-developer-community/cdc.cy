{
  "name": "cdc.cy",
  "version": "2.0.0",
  "description": "Cyprus Developer Communtiy",
  "bugs": {
    "url": "https://github.com/cyprus-developer-community/cdc.cy/issues"
  },
  "license": "MIT",
  "author": "Patrick Heneise <yassas@heneise.co> (https://heneise.co)",
  "contributors": [
    "Patrick Heneise (https://github.com/PatrickHeneise)",
    "Marios Simou (https://github.com/MarioSimou)"
  ],
  "type": "module",
  "scripts": {
    "build": "solid-start build",
    "dev": "solid-start dev",
    "lint": "eslint --fix . --ext .js --ext .ts --ext .tsx --ext md",
    "pretty": "prettier -l --write \"src/**/*.{js,ts,tsx,md,mdx,css,scss}\"",
    "preview": "vite preview",
    "start": "solid-start start",
    "test": ""
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx,json,md,yaml}": [
      "prettier --write"
    ],
    "*.{ts,js,tsx,jsx}": [
      "eslint --cache --fix",
      "npm run test related"
    ],
    "*.{ts,tsx}": [
      "tsc-files --noEmit"
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "@solidjs/meta": "^0.29.1",
    "@solidjs/router": "^0.8.3",
    "clsx": "^2.0.0",
    "solid-js": "^1.8.5",
    "solid-start": "^0.3.10",
    "vite-plugin-solid-svg": "^0.7.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.1.0",
    "@solidjs/testing-library": "^0.8.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-solid": "^0.13.0",
    "lint-staged": "^15.0.2",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "solid-devtools": "^0.28.1",
    "solid-start-node": "0.3.10",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0",
    "vite-plugin-solid": "^2.7.2"
  },
  "engines": {
    "node": ">=20"
  }
}
