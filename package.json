{
  "name": "cdc.cy",
  "version": "1.0.0",
  "description": "Cyprus Developer Communtiy",
  "bugs": {
    "url": "https://github.com/cyprus-developer-community/cdc.cy/issues"
  },
  "license": "MIT",
  "author": "Patrick Heneise <yassas@heneise.co> (https://heneise.co)",
  "contributors": [
    "Patrick Heneise (https://github.com/PatrickHeneise)",
    "Marios Simou (https://github.com/MarioSimou)"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "pnpm run generate:css --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "pnpm generate:css -w",
    "dev:remix": "remix dev -p 3001",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css -c tailwind.config.js",
    "start": "remix-serve build",
    "typecheck": "tsc -b",
    "prettier": "prettier .",
    "prettier:check": "pnpm prettier --check",
    "prettier:format": "pnpm prettier --write",
    "lint:check": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:format": "pnpm lint:check --fix",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest dev",
    "prepare": "is-ci || husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,mdx}": "pnpm prettier:format",
    "*.{ts,tsx,js,jsx}": "pnpm lint:format"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@headlessui/react": "^1.7.10",
    "@heroicons/react": "^2.0.15",
    "@octokit/auth-app": "^4.0.9",
    "@octokit/graphql": "^5.0.5",
    "@remix-run/node": "^1.12.0",
    "@remix-run/react": "^1.12.0",
    "@remix-run/serve": "^1.12.0",
    "@remix-run/server-runtime": "^1.12.0",
    "@zentered/issue-forms-body-parser": "^2.1.1",
    "date-fns": "^2.29.3",
    "date-fns-tz": "^1.3.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-image": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@remix-run/dev": "^1.12.0",
    "@remix-run/eslint-config": "^1.12.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^3.0.0",
    "husky": "8.0.3",
    "is-ci": "^3.0.1",
    "jsdom": "^21.0.0",
    "lint-staged": "^13.1.0",
    "msw": "^0.49.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "tailwindcss": "^3.2.6",
    "typescript": "^4.9.4",
    "vite": "^4.1.1",
    "vite-tsconfig-paths": "^4.0.5",
    "vitest": "^0.27.3"
  },
  "engines": {
    "node": ">=18"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
