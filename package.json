{
  "name": "cdc.cy",
  "version": "1.0.0",
  "description": "Cyprus Developer Communtiy",
  "bugs": {
    "url": "https://github.com/cyprus-developer-community/cdc.cy/issues"
  },
  "license": "MIT",
  "author": "Patrick Heneise <yassas@heneise.co> (https://heneise.co)",
  "contributors": [
    "Patrick Heneise (https://github.com/PatrickHeneise)"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --dev",
    "dev:remix": "remix dev",
    "generate:css": "npx windicss './app/**/*.{jsx,tsx}' -to ./app/styles/windi.css -f windi.config.js",
    "start": "remix-serve build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc -b",
    "format": "prettier --write ."
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,mdx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.!(ts|tsx)": "prettier --write --ignore-unknown"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^2.0.10",
    "@octokit/auth-app": "^4.0.5",
    "@octokit/graphql": "^5.0.1",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@zentered/issue-forms-body-parser": "^1.4.5",
    "date-fns": "^2.29.2",
    "date-fns-tz": "^1.3.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix": "^1.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@remix-run/dev": "^v1.7.0",
    "@remix-run/eslint-config": "^v1.7.0",
    "@types/node": "^18.7.15",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^3.0.0",
    "husky": "8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "windicss": "^3.5.6"
  },
  "engines": {
    "node": "^16||^18"
  }
}
